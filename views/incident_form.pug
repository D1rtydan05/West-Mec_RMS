extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='ir') Incident Report Number:
      input#title.form-control(type='text', placeholder='I.R. #' name='ir' required='true' value=(undefined===incident ? '' : incident.ir) )
      //- why title?

      label(for='location') Location:
      input#location.form-control(type='text' placeholder='1234 street st' name='location' required='true' value=(undefined===incident ? '' : incident.location)) 

      label(for='location_name') Location name:
      input#location_name.form-control(type='text' placeholder='McDonalds' name='location_name' required='true' value=(undefined===incident ? '' : incident.location_name)) 

      //- label(for='code') Code:
      //- input#code.form-control(type='text' placeholder='1234' name='code' required='true' value=(undefined===incident ? '' : incident.code))

      label(for='radio_code') Radio Code:
      input#radio_code.form-control(type='text' placeholder='1234' name='radio_code' required='true' value=(undefined===incident ? '' : incident.radio_code)) 

      label(for='officer') Officer:
      input#officer.form-control(type='text' placeholder='Bob Jones' name='officer' required='true' value=(undefined===incident ? '' : incident.officer)) 

      label(for='officer_badge') Officer Badge:
      input#officer_badge.form-control(type='text' placeholder='1234' name='officer_badge' required='true' value=(undefined===incident ? '' : incident.officer_badge)) 

      label(for='report_date') Report Date:
      input#report_date.form-control(type='date' placeholder='1234' name='report_date' required='true' value=(undefined===incident ? '' : incident.report_date)) 

      label(for='report_time') Report Time:
      input#report_time.form-control(type='text' placeholder='1234' name='report_time' required='true' value=(undefined===incident ? '' : incident.report_time)) 

    div.form-group
      label(for='person') Person (Optional):
      select#person.form-control(type='select', placeholder='Select person' name='person' required='true' )
        for person in persons
          if incident
            option(value=person._id selected=(person._id.toString()===incident.person._id.toString() ? 'selected' : false) ) #{person.name}
          else
            option(value=person._id) #{person.name}
    div.form-group
      label(for='narrative') Narrative:
      textarea#narrative.form-control(type='textarea', placeholder='Narrative' name='narrative' required='true') #{undefined===incident ? '' : incident.narrative}
      //- div.form-group
      //- div.form-group(style='display: inline; padding-right:20px;')
      //- label(for='hazard') Hazard:
      //- input.checkbox-input(type='checkbox', name='hazard')
      
    div.form-group
      label Vehicle:
      div
        for vehicle in vehicles
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='vehicle', id=vehicle._id, value=vehicle._id, checked=vehicle.checked )
            label(for=vehicle._id) #{vehicle.name}

    div.form-group
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg